
@{
    ViewBag.Title = "action List";
}

<h2>Actions CCAR</h2>
<button id="addBtn" class="btn btn-outline-primary" onclick="PopupForm('@Url.Action("AddOrEdit","action")')"><i class="fa fa-plus-square"></i> Add new action</button>


<table id="actionTable" class="table table-striped table-bordered" style="width:100%; margin:auto; align-content:center;">
    <thead>
        <tr>
            <th>Reason</th>
            <th>Initiator</th>
            <th>Origination Date</th>
            <th>Type of Action</th>
            <th>Problem</th>
            <th>Root Cause</th>
            <th>Corrective Action</th>
            <th>Rsponsible</th>
            <th>Target Date</th>
            <th>Progress</th>
            <th>Completion Date</th>
            <th>Efficiency measure</th>
            <th>Date of Efficiency</th>
        </tr>
    </thead>
</table>

<link href="~/Content/Site.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />

@section scripts{

    <script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap.min.js"></script>
    <script src="~/Scripts/moment.min.js"></script>
    <script>
        var Popup, dataTable;
        $(document).ready(function () {
          dataTable =   $("#actionTable").DataTable({
                "ajax": {
                    "url": "/Action/GetData",
                    "type": "GET",
                    "datatype": "json"
                },
                "columns": [
                    { "data": "Reason" },
                    { "data": "idInitiator" },
                    {
                        "data": "originationDate",

                        "render": function (value) {
                            if (value === null) return "";
                            return moment(value).format('DD/MM/YYYY');
                        }
                    },
                    { "data": "idTypeOfAction" },
                    { "data": "problem" },
                    { "data": "rootCause" },
                    { "data": "correctiveAction" },
                    { "data": "idResponsible" },
                    {
                        "data": "targetDate",
                        "render": function (value) {
                            if (value === null) return "";
                            return moment(value).format('DD/MM/YYYY');
                        }

                    },
                    { "data": "idProgress" },
                    {
                        "data": "completionDate",
                        "render": function (value) {
                            if (value === null) return "";
                            return moment(value).format('DD/MM/YYYY');
                        }

                    },
                    { "data": "measureEffic" },
                    { "data": "dateOfEffic" }
                ],
                "language": {
                    "emptyTable" : "No data found, Pleas click on <b> Add New Button</b>"
                }

            })
        });

        function PopupForm(url) {
            var formDiv = $('<div/>');
            $.get(url)
                .done(function (response) {
                    formDiv.html(response);

                    Popup = formDiv.dialog({
                        autoOpen: true,
                        resizable: false,
                        title: 'Fill Actions Details',
                        height: 600,
                        width: 1100,
                        close: function () {
                            Popup.dialog('destroy').remove();
                        }

                    });
                });
        }

        function SubmitForm(form) {
            $.validator.unobtrusive.parse(form);
            if ($(form).valid()) {
                $.ajax({
                    type: "POST",
                    url: form.action,
                    data: $(form).serialize(),
                    success: function (data) {
                        //if (data.success) {
                            Popup.dialog('close');
                            dataTable.ajax.reload();

                            $.notify(data.message, {
                                globalPosition: "top center",
                                className: 'superblue',
                                style: 'happyblue'
                            })

                        //}
                    }
                });
            }
            return false;
        }
        $.notify.addStyle('happyblue', {
            html: "<div>☺<span data-notify-text/>☺</div>",
            classes: {
                base: {
                    "width":"500px",
                    "white-space": "nowrap",
                    "background-color": "lightblue",
                    "padding": "5px"
                },
                superblue: {
                    "color": "white",
                    "background-color": "blue"
                }
            }
        });
        

    </script>


}

