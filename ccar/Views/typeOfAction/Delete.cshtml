@model ccar.Models.TypeOfActionModel

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container movedLeft">
    <div class="row">
        <div class="col-md-8">
            <h3>Are you sure you want to delete this?</h3>
            <div>
                <hr />
                <dl class="dl-horizontal">
                    <dt>
                        Type of action to delete:
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.typeOfAction1)
                    </dd>
                </dl>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="form-actions no-color">
                        <input type="submit" value="Delete" class="btn btn-default" /> <br />
                    </div>
                    @Html.ActionLink("Back to List", "ToAlist")
                }
            </div>
        </div>
    </div>
</div>

