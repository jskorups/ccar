
@model ccar.ModelsLayout.LayoutResponsibleModel

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container movedLeft">

    <div class="col-md-8">

        <div class="row">
            <h3>Are you sure you want to delete this?</h3>
            <div class="col-lg-8">
                <hr />

                <div class="row heading">
                    Reason to delete:
                </div>

                <div class="row">
                    <div class="form-group">
                        @Html.Label(" Firstname:")
                        @Html.DisplayFor(model => model.FirstName)
                    </div>
                </div>


                <div class="row">
                    <div class="form-group">
                        @Html.Label(" Surname:")
                        @Html.DisplayFor(model => model.Lastname)
                    </div>
                </div>


                <div class="row">
                    <div class="form-group">
                        @Html.Label(" Email:")
                        @Html.DisplayFor(model => model.email)
                    </div>
                </div>

            </div>
        </div>
        <div class="row">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <input type="submit" value="Delete" class="btn btn-default submitDelete" /> <br />
                <hr />
                @Html.ActionLink("Back to List", "LayoutResponsiblesList")
            }
        </div>
    </div>

</div>



