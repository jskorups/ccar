@{
    ViewBag.Title = "Home Page";
}

<!DOCTYPE html>
<html lang="en">

<head>

    @*<meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <meta name="description" content="">
        <meta name="author" content="">*@

    <title>Heroic Features - Start Bootstrap Template</title>
</head>

<body>
    <!-- Page Content -->
    <div class="container" style="margin-top:-40px;">
        <div class="row text-center">
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="card h-100">
                    <img class="card-img-top" src="../images/taskCircle.png" alt="">
                    <div class="card-body">
                        <h5 class="card-title">General task - CCAR</h5>
                        <p class="card-text">General task for the plant with mail remainder. Add or edit.</p>
                    </div>
                    <div class="card-footer">
                        <button class="btn btn-primary" onclick="location.href='@Url.Action("Index", "Action")'">More</button>
                    </div>
                </div>
            </div>

            <div class="col-lg-3 col-md-6 mb-4">
                <div class="card h-100">
                    <img class="card-img-top" src="../images/presentation.png" alt="">
                    <div class="card-body">
                        <h5 class="card-title">Meeting Minutes - Projects</h5>
                        <p class="card-text">Attendance list for the meeting minutes. List of tasks accoring to projects.</p>
                    </div>
                    <div class="card-footer">
                        <button class="btn btn-primary" onclick="location.href='@Url.Action("ProjectsIndex", "Action")'">More</button>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="card h-100">
                    <img class="card-img-top" src="../images/map.png" alt="">
                    <div class="card-body">
                        <h5 class="card-title">Layout meetings</h5>
                        <p class="card-text">Layout meetings, list of actions. Add or edit.</p>
                    </div>
                    <div class="card-footer">
                        @*<a class="card" href="@Url.Action("General", "CCARprojects", new { id = 26 })">*@
                        <button class="btn btn-primary" onclick="location.href='@Url.Action("General", "Action", new { id = ccar.Models.ReasonModel.getIdOfReason("Layout meetings") })'">More</button>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="card h-100">
                    <img class="card-img-top" src="../images/analytics.png" alt="">
                    <div class="card-body">
                        <h5 class="card-title">Statistics</h5>
                        <p class="card-text">Find out how efficiently your team works and how fast  project tasks are carried out </p>
                    </div>
                    <div class="card-footer">
                        <a href="#" class="btn btn-primary">More</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="row text-center justify-content-center">

            <div class="col-lg-3 col-md-6 mb-4">
                <div class="card h-100">
                    <img class="card-img-top" src="../images/enviroment.png" alt="">
                    <div class="card-body">
                        <h5 class="card-title">Enviroment</h5>
                        <p class="card-text">Enviroment</p>
                    </div>
                    <div class="card-footer">
                        @*<a class="card" href="@Url.Action("General", "CCARprojects", new { id = 26 })">*@
                        <button class="btn btn-primary" onclick="location.href='@Url.Action("General", "Action", new { id = ccar.Models.ReasonModel.getIdOfReason("Enviroment") })'">More</button>
                    </div>
                </div>
            </div>


            <div class="col-lg-3 col-md-6 mb-4">
                <div class="card h-100">
                    <img class="card-img-top" src="../images/safe.png" alt="">
                    <div class="card-body">
                        <h5 class="card-title">Occupational safety and health</h5>
                        <p class="card-text">The goal of occupational safety and health programs is to foster a safe and healthy work environment.</p>
                    </div>
                    <div class="card-footer">
                        @*<a class="card" href="@Url.Action("General", "CCARprojects", new { id = 26 })">*@
                        <button class="btn btn-primary" onclick="location.href='@Url.Action("General", "Action", new { id = ccar.Models.ReasonModel.getIdOfReason("OHS") })'">More</button>
                    </div>
                </div>
            </div>


            <div class="col-lg-3 col-md-6 mb-4">
                <div class="card h-100">
                    <img class="card-img-top" src="../images/Audit.png" alt="">
                    <div class="card-body">
                        <h5 class="card-title">Audit</h5>
                        <p class="card-text">Audit predefined and postdefined actions.</p>
                    </div>
                    <div class="card-footer">
                        @*<a class="card" href="@Url.Action("General", "CCARprojects", new { id = 26 })">*@
                        <button class="btn btn-primary" onclick="location.href='@Url.Action("General", "Action", new { id = ccar.Models.ReasonModel.getIdOfReason("Audit") })'">More</button>
                    </div>
                </div>
            </div>



        </div>









        </div>











        <!-- /.row -->

    </div>
    <!-- /.container -->
    <!-- Footer -->
    <footer class="py-5 bg-dark">
        <div class="container">
            <p class="m-0 text-center text-white">Copyright &copy; Grupo Antolin 2019</p>
        </div>
        <!-- /.container -->
    </footer>

    <!-- Bootstrap core JavaScript -->
    @*<script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>*@

</body>

</html>
