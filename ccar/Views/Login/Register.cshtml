
@model ccar.Models.LoginModel

@{
    Layout = null;
    ViewBag.Title = "Zarejestrowano";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Register</title>

    <link href="//netdna.bootstrapcdn.com/bootstrap/3.1.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <link href="~/Content/Site.css" rel="stylesheet" />

</head>
<body id="particles-js">
    <div class="container text-center" id="main" style="margin-top:200px; width:1000px; ">

        @Html.AntiForgeryToken()
        <!--Rejestracja-->
        @using (Html.BeginForm("Register", "Login", FormMethod.Post))
        {
            <div id="signupbox" style="margin-top:50px;"  class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
                <div class="panel panel-info">
                    <div class="panel-heading">
                        <div class="panel-title">Register</div>
                        <div style="float:right; font-size: 80%; position: relative; top:-10px">  @Html.ActionLink("Log in", "Logowanie", "Login")  </div>
                    </div>
                    <div class="panel-body">
                        <form id="signupform" class="form-horizontal" role="form">
                            <div id="signupalert" style="display:none" class="alert alert-danger">
                                <p>Error:</p>
                                <span></span>
                            </div>
                            <!--email-->
                            <div class="form-group">
                                <label for="email" class="col-md-3 control-label">Email</label>
                                <div class="col-md-9" style="margin-bottom: 25px">
                                    @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control", @id = "email-username", @type = "text", @name = "email", @value = "", @placeholder = "Wpisz email..." } })
                                    @Html.ValidationMessageFor(model => model.email, null, new { @class = "validation" })
                                    @*<input type="text" class="form-control" name="email" placeholder="Wpisz email">*@
                                </div>
                            </div>
                            <!--firstname-->
                            <div class="form-group">
                                <label for="firstname" class="col-md-3 control-label">Imię</label>
                                <div class="col-md-9" style="margin-bottom: 25px">
                                    @Html.Editor("firstname", new { htmlAttributes = new { @class = "form-control", @id = "firstname-username", @type = "text", @name = "firstname", @value = "", @placeholder = "Wpisz imię..." } })
                                    @*<input type="text" class="form-control" name="firstname" placeholder="Wpisz imię">*@
                                </div>
                            </div>
                            <!--surname-->
                            <div class="form-group">
                                <label for="surname" class="col-md-3 control-label">Nazwisko</label>
                                <div class="col-md-9" style="margin-bottom: 25px">
                                    @Html.Editor("surname", new { htmlAttributes = new { @class = "form-control", @id = "surname-username", @type = "text", @name = "surname", @value = "", @placeholder = "Wpisz nazwisko..." } })
                                    @*<input type="text" class="form-control" name="surname" placeholder="Wpisz nazwisko">*@
                                </div>
                            </div>
                            <!--password-->
                            <div class="form-group">
                                <label for="password" class="col-md-3 control-label">Hasło</label>
                                <div class="col-md-9" style="margin-bottom: 25px">
                                    @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control", @id = "password-username", @type = "password", @name = "email", @value = "", @*@placeholder = "Wpisz hasło..."*@}
                            })
                                    @Html.ValidationMessageFor(model => model.password, null, new { @class = "validation" })
                                    @*<input type="password" class="form-control" name="passwd" placeholder="Wpisz hasło">*@
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="icode" class="col-md-3 control-label">Powtórz hasło</label>
                                <div class="col-md-9" style="margin-bottom: 25px">
                                    @Html.EditorFor(model => model.confirmPassword, new { htmlAttributes = new { @class = "form-control", @id = "passwordConfirm-username", @type = "password", @name = "email", @value = "", @*@placeholder = "Wpisz login..."*@}
                            })
                                    @Html.ValidationMessageFor(model => model.confirmPassword, null, new { @class = "validation" })
                                    @*<input type="text" class="form-control" name="icode" placeholder="Wpisz hasło ponownie">*@
                                </div>
                            </div>

                            <div class="form-group">
                                <!-- Button -->
                                <div class="col-md-offset-1 col-md-9" style="border-top:1px solid#888;  padding-top:15px; margin-bottom: 25px">
                                    <input id="btn-login" type="submit" value="Create" class="btn btn-info" formmethod="post" )" />
                                    @*<button id="btn-signup" type="button" class="btn btn-info"> &nbsp Sign Up</button>*@
                                </div>
                            </div>

                            <div style="float:right; position:center; background-size:cover; width:70px; height:70px; background-image: url(../../images/0.png)"></div>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>





    <script src="~/Scripts/particles.js"></script>
    <script src="~/Scripts/app.js"></script>
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.1.0/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>



</body>

</html>