@model ccar.Models.LoginModel

@{
    Layout = null;
    ViewBag.Title = "Logowanie";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Logowanie</title>

    <link href="//netdna.bootstrapcdn.com/bootstrap/3.1.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <link href="~/Content/Site.css" rel="stylesheet" />

</head>
<body id="particles-js">

    <!--Logowanie-->
    <div class="container text-center" id="main" style="margin-top:200px; width:1000px; ">

        @Html.AntiForgeryToken()

        @using (Html.BeginForm("Logowanie", "Login", FormMethod.Post))
        {
            <div id="loginbox" style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
                <div class="panel panel-info">
                    <div class="panel-heading">
                        <div class="panel-title" style="text-align:center">Zaloguj się</div>
                        <div style="float:right; font-size: 80%; position: relative; top:-10px">

                            @Html.ActionLink("Forgot password?", "RecoverPassword", "Login")

                        </div>
                    </div>
                    <div style="padding-top:30px; align-content:center; text-align:center" class="panel-body">
                        <div style="display:none" id="login-alert" class="alert alert-danger col-sm-12"></div>

                        <form id="loginform" class="form-horizontal" role="form">


                            <div class="row">


                                <div class="col-lg-1">

                                </div>
                                <div class="col-lg-10">


                                    <!--login-->
                                    <div style="margin-bottom: 25px" class="input-group">
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                                        @Html.Editor("email", new { htmlAttributes = new { @class = "form-control", @id = "email-username", @type = "text", @name = "email", @value = "", @placeholder = "Wpisz email..." } })
                                        @Html.ValidationMessageFor(model => model.email, null, new { @class = "validation" })
                                    </div>
                                    <!--password-->
                                    <div style="margin-bottom:25px" class="input-group">
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                                        @Html.Editor("password", new { htmlAttributes = new { @class = "form-control", @id = "login-password", @type = "password", @name = "password", @value = "", @placeholder = "Wpisz hasło..." } })
                                    </div>

                                    <!--2705-->
                                    <!-- Button Login -->
                                    <div style="margin-top:10px; align-content:center" class="form-group">

                                        <div class="col-sm-12 controls">
                                            @*@Html.ActionLink("Zaloguj się!", "Index", "Action")*@
                                            <input id="btn-login" type="submit" value="Login" class="btn btn-info" />
                                            @*<a id="btn-login" type="submit" value="Create" href="#" class="btn btn-info">Login  </a>*@
                                        </div>
                                    </div>

                                    <!--Checkbox remember me-->
                                    <div class="input-group">
                                        <div class="checkbox">
                                            <label>
                                                <input id="login-remember" type="checkbox" name="remember" value="1"> Remember me
                                            </label>
                                        </div>
                                    </div>
                                    <div class="form-group" id="zarejestrujSie">
                                        <div class="col-md-12 control">
                                            <div style="border-top: 1px solid#888; padding-top:15px; font-size:85%">
                                                @Html.ActionLink("Zarejestruj się","Register", "Login")                               
                                              
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-1">

                                </div>
                            </div>
                            <div style="float:right; position:center; background-size:cover; width:70px; height:70px; background-image: url(../../images/0.png)"></div>
                        </form>
                    </div>
                </div>
            </div>
        }

       


    </div>



