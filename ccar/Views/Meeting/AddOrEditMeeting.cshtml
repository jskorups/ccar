@model ccar.ModelsMM.MMViewModels.AddMeetingViewModel

@{
    /**/

    Layout = null;
}


@using (Html.BeginForm("AddOrEditMeeting", "Meeting", FormMethod.Post, new { onsubmit = "return SubmitForm(this)" }))
{
    @Html.HiddenFor(model => model.meetingUsers.isPresent)


    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @id = "koko" })


    <div class="form-group container">
        <div class="row">
            <div class="col-md-3 mb-3">
                @*@Html.Label("Project*", new { @class = "control-label" })
                    @Html.ValidationMessageFor(model => model.meeting.ProjectId, null, new { @class = "koko" })
                    @Html.DropDownListFor(model=>model.meeting.ProjectId, new SelectList(Model.projList, "id", "ProjectName"), new { @class = "form-control" })*@
                @foreach (var item in Model.userList)
                {
                
                    <div class="checkbox">
                        <label><input type="checkbox" name="@item.id" value="">@item.firstname @item.surname  </label>
                    </div>
                }
            </div>
            <div class="col-md-3 mb-3" style="margin-left:-20px;">
                @Html.Label("Add new user", new { @class = "control-label" })
                <button type="button" class="btn btn-default" style="display:block; background-color:indianred" onclick="location.href='@Url.Action("UsersList", "MeetingMinutesUser")'"> <span class="glyphicon glyphicon-edit" style="color:white; background-color:indianred" aria-hidden="true"></span></button>
            </div>

        </div>
    </div>


    <div class="form-group container">
        <div class="row">
            <div class="col-md-12 mb-12 text-center">
                <input type="submit" value="Submit" class="btn btn-success" style="width:250px; height:40px" />
                <input type="reset" value="Reset" class="btn btn-danger" style="width:250px; height:40px" />
            </div>
        </div>
    </div>

    <div class="form-group container">
        <div class="row">
            <div class="col-md-5 mb-5 text-center">
            </div>
            <div class="col-md-5 mb-5 text-center">
            </div>
            <div class="col-md-2 mb-2 text-center">
                <span style="color:red; font-style:oblique;">* Required</span>
            </div>


        </div>
    </div>

    <script>

        function SubmitForm(form) {
            $.validator.unobtrusive.parse(form);
            if ($(form).valid()) {
                $.ajax({
                    type: "POST",
                    url: form.action,
                    data: $(form).serialize(),
                    success: function (data) {
                        //if (data.success) {
                        Popup.dialog('close');
                        dataTable.ajax.reload();

                        $.notify(data.message, {
                            globalPosition: "top center",
                            className: "success"

                        })

                        //}
                    }
                });
            }
            return false;
        }
    </script>
}

