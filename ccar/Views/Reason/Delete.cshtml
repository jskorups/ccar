@model ccar.Models.ReasonModel

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container movedLeft">
   
        <div class="col-md-8">

            <div class="row">
                <h3>Are you sure you want to delete this?</h3>
                <div class="col-lg-8">
                    <hr />

                    <div class="row heading">
                        Reason to delete:
                    </div>
                    <div class="row">
                        @Html.DisplayFor(model => model.reason)
                    </div>
                </div>
            </div>                 
            <div class="row">
                @using (Html.BeginForm())
    {
            @Html.AntiForgeryToken()

            <input type="submit" value="Delete" class="btn btn-default submitDelete" /> <br />
            <hr />
            @Html.ActionLink("Back to List", "ReasonList")
}
            </div>
        </div>
   
</div>


