@model IEnumerable<ccar.Models.ReasonModel>

@{
    ViewBag.Title = "ListaReasonow";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ListaReasonow</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.reason)
        </th>
        <th></th>
    </tr>

