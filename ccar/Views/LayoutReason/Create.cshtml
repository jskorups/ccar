@model ccar.ModelsLayout.LayoutReasonModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<div class="container movedLeft">
    <div class="row">
        <div class="col-md-8">
            <h2>Create new layout reason</h2>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="row">

                    @Html.HiddenFor(model => model.id)
                    <div class="form-group">

                        @Html.Label("Layout Reason", htmlAttributes: new { @class = "control-label col-md-8 " })
                        @Html.EditorFor(model => model.reasonLayout, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.reasonLayout, "", new { @class = "text-danger" })

                    </div>
                </div>
                <div class="row">
                    <input type="submit" value="Create" class="btn btn-default submitCreate" />
                </div>
                <hr />
                <div class="row">
                    <div class="form-group">
                        @Html.ActionLink("Back to List", "LayoutReasonList")
                    </div>
                </div>
            }
        </div>
    </div>
</div>


