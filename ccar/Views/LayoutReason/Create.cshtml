@model ccar.ModelsLayout.LayoutReasonModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h2>Create Layout Reason</h2>
    <hr />

    <div class="row">

        <div class="col-md-4">
            @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            @Html.Label("Layout Reason", htmlAttributes: new { @class = "control-label " })

    }
        </div>
        <div class="col-md-8">
            @Html.EditorFor(model => model.reasonLayout, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.reasonLayout, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="row">

        <input type="submit" value="Create" class="btn btn-default" />
    </div>

    <div>
        @Html.ActionLink("Back to List", "LayoutReasonList")
    </div>

</div>
